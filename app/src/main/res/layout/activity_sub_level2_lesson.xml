<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yogibear"
    tools:context=".Sub_Level2_Lesson">

    <ImageView
        android:id="@+id/tv_les"
        android:layout_width="345dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img3" />

    <TextView
        android:id="@+id/tv_lesson2"
        android:layout_width="227dp"
        android:layout_height="78dp"
        android:layout_marginTop="116dp"
        android:background="#E6AAAA"
        android:text="Lesson 2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image1_lvl2"
        android:layout_width="381dp"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lesson2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lesson2_1" />

    <ImageView
        android:id="@+id/image2_lvl2"
        android:layout_width="315dp"
        android:layout_height="147dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1_lvl2"
        app:srcCompat="@drawable/lesson2_2" />

    <ImageView
        android:id="@+id/image3_lvl2"
        android:layout_width="305dp"
        android:layout_height="153dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2_lvl2"
        app:srcCompat="@drawable/lesson2_3" />

    <Button
        android:id="@+id/btn_backHome_lesson2"
        android:layout_width="282dp"
        android:layout_height="58dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#832727"
        android:text="Go to Quiz"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image3_lvl2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>