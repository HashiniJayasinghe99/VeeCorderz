<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yogibear"
    tools:context=".Sub_Level3_Lesson">

    <ImageView
        android:id="@+id/tv_les"
        android:layout_width="350dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img3" />

    <TextView
        android:id="@+id/tv_lesson3"
        android:layout_width="227dp"
        android:layout_height="78dp"
        android:layout_marginTop="120dp"
        android:background="#E6AAAA"
        android:text="Lesson 3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image1_lvl3"
        android:layout_width="369dp"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lesson3"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/lesson3_1" />

    <ImageView
        android:id="@+id/image2_lvl3"
        android:layout_width="295dp"
        android:layout_height="144dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1_lvl3"
        app:srcCompat="@drawable/lesson3_2" />

    <ImageView
        android:id="@+id/image3_lvl3"
        android:layout_width="283dp"
        android:layout_height="143dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2_lvl3"
        app:srcCompat="@drawable/lesson3_3" />

    <Button
        android:id="@+id/btn_backHome_lesson3"
        android:layout_width="282dp"
        android:layout_height="58dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#832727"
        android:text="Go to Quiz"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image3_lvl3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>