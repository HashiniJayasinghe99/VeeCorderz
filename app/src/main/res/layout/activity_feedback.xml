<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yogibear"
    tools:context=".Feedback">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="405dp"
        android:layout_height="85dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="629dp"
        android:background="#475665"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/feedback_top"
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="11dp"
            android:text="Feedback"
            android:textColor="#C3C3BD"
            android:textSize="48sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="443dp"
        android:layout_height="545dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panda" />

    <TextView
        android:id="@+id/feedback_name"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="300dp"
        android:background="#68a0b0"
        android:text="   Your Name"
        android:textColor="#010b13"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/feedback_feedback"
        android:layout_width="126dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="412dp"
        android:background="#C6AFD6"
        android:text="   Feedback"
        android:textColor="#010b13"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="184dp"
        android:layout_height="72dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        android:textColor="#1b1b1b"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_feedback"
        android:layout_width="192dp"
        android:layout_height="119dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="..."
        android:textColor="#1b1b1b"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_feedback" />

    <Button
        android:id="@+id/feedback_btnSend"
        android:layout_width="286dp"
        android:layout_height="63dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#db5a6b"
        android:text="Send to Server"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_feedback" />

    <Button
        android:id="@+id/feedback_btnDetails"
        android:layout_width="289dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#303F65"
        android:text=" View Sended Details"
        android:textSize="20dp"
        android:textStyle="bold"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_btnSend" />
</androidx.constraintlayout.widget.ConstraintLayout>